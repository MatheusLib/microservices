[Unit]
Description=policy-service API
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/microservices/policy-service
EnvironmentFile=/home/ec2-user/microservices/policy-service/.env
ExecStart=/usr/bin/go run ./cmd/api
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
